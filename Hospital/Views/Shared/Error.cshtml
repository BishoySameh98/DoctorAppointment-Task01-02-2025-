@{
    ViewData["Title"] = "Error - Page Not Found";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>404 - Not Found</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body class="container text-center mt-5">

    <h1 class="text-danger">404 - Page Not Found</h1>
    <p class="lead">Oops! The page you are looking for does not exist.</p>

    <img src="https://via.placeholder.com/400x250?text=404+Error" alt="404 Not Found" class="img-fluid my-4">
    <br/>
    <a href="@Url.Action("Index")" class="btn btn-primary">Go Back to Home</a>

</body>
</html>
